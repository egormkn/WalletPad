<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context="su.gear.walletpad.fragments.StatisticsFragment"
    android:background="@color/windowBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        android:text="Add new plan:"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:background="@drawable/converter_shape">

        <Spinner
            android:id="@+id/edit_plan_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:entries="@array/currencies"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_plan_amount_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <EditText
                android:id="@+id/edit_plan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="@color/colorAccentLight"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:background="@drawable/converter_shape">

        <Spinner
            android:id="@+id/edit_plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:entries="@array/plans_type"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_plan_title_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <EditText
                android:id="@+id/edit_plan_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:imeOptions="actionNext"
                android:maxLength="16"
                android:maxLines="1"
                android:textSize="20sp"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/converter_shape">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_plan_description_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_plan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:imeOptions="actionNext"
                android:maxLength="16"
                android:maxLines="1"
                android:textSize="20sp"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
