<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <su.gear.walletpad.views.IconView
        android:id="@+id/wallet_category"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:shape="circle"
        app:icon_width="24dp"
        app:icon_height="24dp"
        app:icon="@drawable/ic_banks"
        />

    <TextView
        android:id="@+id/wallet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/wallet_category"
        android:layout_toRightOf="@+id/wallet_category"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Header"
        />

    <TextView
        android:id="@+id/wallet_pre_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_title"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/wallet_category"
        android:layout_toRightOf="@+id/wallet_category"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Баланс: " />

    <TextView
        android:id="@+id/wallet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_title"
        android:layout_toEndOf="@+id/wallet_pre_amount"
        android:layout_toRightOf="@+id/wallet_pre_amount"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="100$" />

    <TextView
        android:id="@+id/wallet_pre_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_pre_amount"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/wallet_category"
        android:layout_toRightOf="@+id/wallet_category"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Последняя операция: " />

    <TextView
        android:id="@+id/wallet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_pre_amount"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/wallet_pre_date"
        android:layout_toRightOf="@+id/wallet_pre_date"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="15.12.2016" />

</RelativeLayout>